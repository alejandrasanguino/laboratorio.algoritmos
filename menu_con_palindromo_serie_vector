double areaTriangulo( int A, int B, int C)
{
	double p,area;
	p=((A+B+C)/2.0);
	area=sqrt((p*(p-A)*(p-B)*(p-C)));
	return (area);
}
void cargar (int vec[], int n)
{
	for (int i=0;i<n;i++)
	{
		cout<<"vec["<<i<<"]=  ";
		cin>>vec[i];
	}
}
